#include <stdio.h>
#include <string.h>

int main() {
    char s[200], word[200];
    int i = 0, j = 0;

    printf("Enter a sentence: ");
    gets(s);

    while (1) {
        if (s[i] != ' ' && s[i] != '\0') {
            word[j++] = s[i];   
        } else {
            word[j] = '\0';     

            // print reversed
            for (int k = j-1; k >= 0; k--) {
                printf("%c", word[k]);
            }

            if (s[i] == ' ') printf(" ");  

            j = 0;  
        }

        if (s[i] == '\0') break;
        i++;
    }

    return 0;
}
