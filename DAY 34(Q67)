#include <stdio.h>

int main() {
    int a[50], n, pos, num, i;

    printf("Enter size of array: ");
    scanf("%d", &n);

    printf("Enter elements: ");
    for(i = 0; i < n; i++)
        scanf("%d", &a[i]);

    printf("Enter position: ");
    scanf("%d", &pos);

    printf("Enter number to insert: ");
    scanf("%d", &num);

    for(i = n; i >= pos; i--)
        a[i] = a[i - 1];

    a[pos - 1] = num;
    n++;

    printf("New array: ");
    for(i = 0; i < n; i++)
        printf("%d ", a[i]);

    return 0;
}
