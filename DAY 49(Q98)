#include <stdio.h>
#include <string.h>

int main() {
    char name[100];
    int i, last = -1;

    printf("Enter full name: ");
    if (!fgets(name, sizeof(name), stdin)) return 0;

    // remove trailing newline from fgets
    name[strcspn(name, "\n")] = '\0';

    // find last space (start of surname)
    for (i = 0; name[i] != '\0'; i++) {
        if (name[i] == ' ')
            last = i;
    }

    if (last == -1) {
        printf("%s\n", name);
        return 0;
    }

    if (name[0] != ' ')
        printf("%c ", name[0]);

    for (i = 1; i < last; i++) {
        if (name[i] == ' ' && name[i+1] != ' ' && name[i+1] != '\0') {
            printf("%c ", name[i+1]);
        }
    }

    printf("%s\n", &name[last + 1]);

    return 0;
}
